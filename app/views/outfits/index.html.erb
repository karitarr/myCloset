<p id="notice"><%= notice %></p>

<h1>Listing outfits</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Notes</th>
      <th>Worn On</th>
      <th>Clothing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= outfit.event %></td>
        <td><%= outfit.notes %></td>
        <td><%= outfit.worn_on %></td>
       <td><%= outfit.clothing_ids %></td>

        <td><%= link_to 'Show', outfit %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

